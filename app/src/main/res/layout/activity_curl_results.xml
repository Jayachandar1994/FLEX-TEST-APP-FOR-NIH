<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cmsc436.msproject.curlTest.CurlResults" >
    
    <TextView
        android:id="@+id/leftSideLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin"
        android:textSize="@dimen/textSize"
        android:textStyle="bold"
        android:text="@string/sampleText"/>

    <TextView
        android:id="@+id/leftNumOfCurls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/leftSideLabel"
        android:layout_marginTop="@dimen/margin"
        android:paddingLeft="@dimen/margin"
        android:paddingRight="@dimen/margin"
        android:textSize="@dimen/textSize"
        android:textStyle="bold"
        android:text="@string/sampleText"/>

    <TextView
        android:id="@+id/leftAveCurlTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/leftNumOfCurls"
        android:layout_marginTop="@dimen/margin"
        android:paddingLeft="@dimen/margin"
        android:paddingRight="@dimen/margin"
        android:textSize="@dimen/textSize"
        android:textStyle="bold"
        android:text="@string/sampleText"/>

    <TextView
        android:id="@+id/rightSideLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/leftAveCurlTime"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin"
        android:textSize="@dimen/textSize"
        android:textStyle="bold"
        android:text="@string/sampleText"/>

    <TextView
        android:id="@+id/rightNumOfCurls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rightSideLabel"
        android:layout_marginTop="@dimen/margin"
        android:paddingLeft="@dimen/margin"
        android:paddingRight="@dimen/margin"
        android:textSize="@dimen/textSize"
        android:textStyle="bold"
        android:text="@string/sampleText"/>

    <TextView
        android:id="@+id/rightAveCurlTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rightNumOfCurls"
        android:layout_marginTop="@dimen/margin"
        android:paddingLeft="@dimen/margin"
        android:paddingRight="@dimen/margin"
        android:textSize="@dimen/textSize"
        android:textStyle="bold"
        android:text="@string/sampleText"/>

    <Button
        android:id="@+id/mainMenuBtn"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin"
        android:layout_marginBottom="@dimen/margin"
        android:textSize="@dimen/textSize"
        android:text="@string/mainMenuBtnLabel"/>
</RelativeLayout>
